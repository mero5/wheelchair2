<div class="container">
  <div class="row mt-3">
    <div class='mt-3 col-4 mx-auto'>
      <h4 class="text-center bg-secondary text-white"><%= @contact.name %>さまからのお問い合わせ</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active text-dark" style="width: 30%">ご用件</td>
            <td  style="width: 70%"><%= @contact.subject %></td>
          </tr>
          <tr>
            <td class="table-active text-dark" style="width: 30%">氏名</td>
            <td  style="width: 70%"><%= @contact.name %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">電話番号</td>
            <td class="w-100"><%= @contact.phone_number %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">メールアドレス</td>
            <td class="w-100"><%= @contact.email %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">連絡方法</td>
            <td class="w-100"><%= @contact.status %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">お問い合わせ内容</td>
            <td class="w-100"><%= @contact.message %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>