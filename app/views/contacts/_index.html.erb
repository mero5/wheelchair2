<div class="container">
  <div class="row my-4">
    <div class='mt-3 col-6 mx-auto'>
      <h4 class="text-center bg-light">お問い合わせ一覧</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <% if contacts.blank? %>
        <p class="text-center mt-3"><strong>お問い合わせはありません</strong></p>
      <% else %>
        <table class="table">
          <tbody>
            <% contacts.each do |contact| %>
              <tr>
                <td class="text-center"><strong><%= contact.name %>さま</strong></td>
                <td class="text-center"><%= link_to "内容確認", contact_path(contact), class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>