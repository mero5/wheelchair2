<div class="row mt-3">
  <% result.each do |item| %>
    <div class="col-3">
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.image, size: '150x120', class: "mb-2 d-block w-100", style: "background-size: cover; background-position: center;" %>
      <% end %>
      <p class="mb-2"><%= item.name %></p>
      <p class="mb-2">ï¿¥<%= item.with_tax_price.to_s(:delimited) %></p>
    </div>
  <% end %>
</div>