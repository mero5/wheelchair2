<div class='container'>
  <div class='row mt-5'>
    <div class='col-10 mx-auto'>
      <h2 class="text-center bg-light"><%= @customer.full_name %>さまの登録住所一覧</h2>
    </div>
  </div>
  <div class="row my-4">
    <div class='col-12 mx-auto'>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active text-dark" style="width: 25%">郵便番号</th>
            <th class="table-active text-dark" style="width: 40%">住所</th>
            <th class="table-active text-dark" style="width: 25%">宛名</th>
          </tr>
        </thead>
        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.delivery_postcode %></td>
              <td><%= delivery.delivery_address %></td>
              <td><%= delivery.delivery_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @deliveries.blank? %>
        <div class="mt-5 text-center"><strong>他の住所は登録されていません</strong></div>
      <% end %>
    </div>
  </div>
</div>