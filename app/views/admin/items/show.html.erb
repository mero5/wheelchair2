<div class="container">

  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-25 h4 bg-light">商品詳細</h2>
    </div>
  </div>

    <div class="row">
      <div class="col-10 mx-auto">

      <div class="row mt-5">
        <div class="col-6">
          <%= image_tag @item.image, size: "350x250", style: "background-size: cover; background-position: center;" %>
        </div>

        <div class="col-6">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>商品名</td>
                <td class="w-50"><%= @item.name %></td>
              </tr>

              <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>

              <tr>
                <td>カテゴリ</td>
                <td><%= @item.category.category_name %></td>
              </tr>

              <tr>
                <td>税込価格<br />(税抜き価格)</td>
                <td><%= @item.with_tax_price.to_s(:delimited) + '円' %><br /><%= '(' + @item.price.to_s(:delimited) + '円)' %></td>
              </tr>

              <tr>
                <td>販売ステータス</td>
                  <% if @item.is_active == false %>
                <td class="text-success">販売中</td>
                  <% else @item.is_active == true %>
                <td>販売停止中</td>
                  <% end %>
              </tr>
              <tr>
                <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>