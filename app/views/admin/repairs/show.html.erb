<div class='container'>
  <div class='row'>
    <h2 class="text-center w-25 h4 bg-light mt-3">修理依頼履歴詳細</h2>
  </div>
  <div class='row'>
    <div class='col-7 mt-3'>
      <h2 class="w-25 h4 mt-3">修理依頼情報</h2>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active text-dark" style="width: 20%">注文日</td>
            <td><%= @repair.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
          </tr>
          <tr>
            <td class="table-active text-dark align-middle">車椅子の種類</td>
            <td><%= @repair.wheelchair_kinds %></td>
          </tr>
          <tr>
            <td class="table-active text-dark align-middle">タイヤ</td>
            <td><%= @repair.tire %></td>
          </tr>
          <tr>
            <td class="table-active text-dark align-middle">キャスター</td>
            <td><%= @repair.caster %></td>
          </tr>
          <tr>
            <td class="table-active text-dark align-middle">ブレーキ</td>
            <td><%= @repair.break %></td>
          </tr>
          <tr>
            <td class="table-active text-dark align-middle">修理場所</td>
            <td>
              <%= @repair.address %></br>
              <%= @repair.name %>
            </td>
          </tr>
          <tr>
            <td class="table-active text-dark">修理ステータス</td>
            <td>
              <%= form_with model:@repair, url: admin_repair_path, class: "d-inline-block" do |f| %>
                <div class="form-inline">
                   <%= f.select(:status, ["修理依頼確認中", "スケジュール調整中", "修理完了済み"], {}, { class: "custom-select mr-2"}) %>
                   <%= f.submit "更新", class: 'btn btn-success' %>
                </div>
               <% end %>
            <td><%= @repair.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>