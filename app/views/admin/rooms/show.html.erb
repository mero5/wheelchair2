<!-- チャットルーム -->
<div class="container">
  <div class="row mt-3">
    <div class='mt-3 col-4 mx-auto'>
      <h4 class="text-center bg-secondary text-white"><%= @room.customer.full_name %>さまとチャット</h4>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%#= paginate @messages %>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <div class="chat bg-light p-4">
        <div id="messages-index">
          <% if @messages.blank? %>
            <p>メッセージはありません</p>
          <% else %>
            <%= render 'admin/messages/index', room: @room, messages: @messages %>
          <% end %>
        </div>
        <div class="mt-3">
          <div style="text-align: right;">
            <div id="message">
              <%= render 'admin/messages/form', room: @room, message: @message  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>