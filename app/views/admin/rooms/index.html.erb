<%= render "contacts/index", contacts: @contacts %>
<div class="container">
  <div class="row mt-5">
    <div class='mt-3 col-6 mx-auto'>
      <h4 class="text-center bg-light">チャットルームの一覧</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
        <% if @rooms.blank? %>
          <p class="text-center mt-3"><strong>メッセージはありません</strong></p>
        <% else %>
          <table class="table">
            <tbody>
              <% @rooms.each do |room| %>
                <tr>
                  <td class="text-center"><strong><%= room.customer.full_name %>さま</strong></td>
                  <td class="text-center"><%= link_to "チャット", admin_room_path(room), class: "btn btn-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
    </div>
  </div>
</div>

