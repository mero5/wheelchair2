<%#= render 'new', delivery: @delivery %>
<div class='container'>

  <%= render 'layouts/errors', obj: @delivery %>
  <div class='row'>

    <div class='mt-3 w-75 p-3'>
      <h2  class="text-center w-25 h4 bg-light mt-3">配送先編集</h2>

      <%= form_with model: @delivery, class: "mt-5" do |f| %>
        <div class="d-flex justifycontent-spacebetween">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td><%= f.label :postcode, '郵便番号(ハイフンなし)', class: "col-form-label" %></td>
                <td><%= f.text_field :postcode, class: "form-control col-6" %></td>
              </tr>
              <tr>
                <td><%= f.label :address, '住所', class: "col-form-label" %></td>
                <td><%= f.text_field :address, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :name, '宛名', class: "col-form-label" %></td>
                <td><%= f.text_field :name, class: "form-control col-6" %></td>
                <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      <% end %>

    </div>
  </div>

</div>