<!-- 欲しいものリスト一覧 -->
<div class="container">
  <div class="row mt-5">
    <div class="col-12 mx-auto">
      <h3 class="text-center bg-light"><strong>欲しいものリスト一覧</strong>(全<%= @favorites.count %>件)</h3>
    </div>
  </div>
  <div class="row mt-3 my-5">
    <% @favorites.each do |favorite| %>
      <div class="col-3">
        <li class="nav-item nav-link border rounded btn mr-3 shadow-lgbg-white rounded">
          <%= link_to item_path(favorite.item.id) do %>
            <%= image_tag favorite.item.image, size: '200x150', class: "mb-2 d-block w-100", style: "background-size: cover; background-position: center;" %>
            <p class="mb-2 text-dark"><%= favorite.item.name %></p>
            <p class="mb-2 text-dark">￥<%= favorite.item.with_tax_price.to_s(:delimited) %></p>
          <% end %>
        </li>
      </div>
    <% end %>
  </div>
</div>