<div class="container">
  <div class="chat bg-light p-4">
    <div class='mt-3 col-4'>
      <h2 class="text-center h4 bg-light">チャットルーム</h2>
    </div>
    <div class="message d-flex flex-row align-items-start mb-4">
          user
        </div><!-- .message-icon -->
        <p class="message-text p-2 ms-2 mb-0 bg-warning">
      <% if @messages.blank? %>
        <p>メッセージはありません</p>
      <% else%>
        <% @messages.each do |message| %>
          <div>
            <% if message.customer %>
              <span><%= message.customer.first_name %>:</span>
            <% else %>
              <span>スタッフ:</span>
            <% end %>
            <span><%= message.message %></span>
          </div>
        <% end %>
      <% end %>
               </p><!-- .message-text -->
      </div><!-- .message -->
      <%= form_with model: @message, url: message_path, local: true do |f| %>
        <%= f.text_field :message, :placeholder => "メッセージを入力して下さい", class:"address-new-form" %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.submit "送信", class:"btn btn-primary ml-3" %>
      <% end %>
  </div>
</div>