<!-- スタッフとのチャットルーム -->
<div class="container">
  <div class="row mt-3">
    <div class='mt-3 col-4 mx-auto'>
      <h2 class="text-center bg-light"><strong>スタッフとチャット</strong></h2>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%#= paginate @messages %>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <div class="chat bg-light p-4">
        <div id="messages-index">
          <% if @messages.blank? %><!-- メッセージの存在確認 -->
            <p>メッセージはありません</p>
          <% else%>

            <!-- メッセージ一覧 -->
            <%= render 'public/messages/index', room: @room, messages: @messages %>
          <% end %>
        </div>
        <div class="row mt-3">
          <div class="col-12">
            <div style="text-align: right;">
              <div id="message" >
                <!-- メッセージ入力フォーム -->
                <%= render 'public/messages/form', room: @room, message: @message  %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>