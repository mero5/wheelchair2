<div class='container'>
  <div class='row mt-4'>
    <div class='col-8 mx-auto'>
      <h2 class="text-center bg-light"><strong>プロフィール</strong></h2>
    </div>
  </div>
  <div class='row mt-3'>
    <div class='col-8 mx-auto'>
    <div class="text-center">
      <%= link_to "プロフィール編集", customers_profile_edit_path, class: 'border-success rounded-success btn text-success' %>
    </div>
    </div>
  </div>
  <div class="row mt-3 ml-1">
    <table class="col-8 mx-auto table table-bordered">
      <tbody>
        <tr>
          <td class="table-active text-dark" style="width: 30%">氏名</td>
          <td  style="width: 70%"><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td class="table-active text-dark">カタカナ</td>
          <td class="w-100"><%= @customer.kana_full_name %></td>
        </tr>
        <tr>
          <td class="table-active text-dark">生年月日</td>
          <td class="w-100"><%= @customer.birth_date %><span class="pl-3"><%= @customer.age %></span></td>
        </tr>
        <tr>
          <td class="table-active text-dark">郵便番号</td>
          <td class="w-100"><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td class="table-active text-dark">住所</td>
          <td class="w-100"><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-active text-dark">電話番号</td>
          <td class="w-100"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="table-active text-dark">メールアドレス</td>
          <td class="w-100"><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class='row mt-1 ml-5 my-5'>
    <div class='col-8 mx-auto'>
      <div class="text-center">
        <%= link_to "登録住所一覧", deliveries_path, class: 'border-primary rounded-primary btn text-primary mr-3' %>
      </div>
    </div>
  </div>
</div>