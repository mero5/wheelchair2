<div class='container'>
  <div class='row'>
    <h2 class="text-center w-25 h4 bg-light mt-3">注文履歴一覧</h2>

    <div class='col-12 mt-3'>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active text-dark" style="width: 10%">注文日</td>
            <td class="table-active text-dark" style="width: 39%">配達先</td>
            <td class="table-active text-dark" style="width: 20%">注文商品</td>
            <td class="table-active text-dark" style="width: 10%">支払金額</td>
            <td class="table-active text-dark" style="width: 10%">ステータス</td>
            <td class="table-active text-dark" style="width: 11%">注文詳細</td>
          </tr>
            <% @orders.each do |order| %>
              <tr>
                <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td>〒<%= order.post_code %></br>
                  <%= order.address %></br>
                  <%= order.name %></td>
                <td class="align-middle">
                  <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %></br>
                  <% end %>
                </td>
                <td class="align-middle"><%= order.billing_amount.to_s(:delimited) %>円</td>
                <td class="align-middle"><%= order.status %></td>
                <td class="align-middle"><%= link_to "表示する", order_path(order.id), class: 'btn btn-primary' %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>