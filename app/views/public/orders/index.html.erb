<div class='container'>
  <div class='row'>
    <div class='col-8 mt-4 mx-auto'>
      <h4 class="text-center bg-light">注文履歴一覧</h2>
    </div>
  </div>
  <div class='row mt-4'>
    <div class='col-12 mx-auto'>
      <% if @orders.present? %>
      <table class="table">
        <tbody>
          <tr>
            <td class="table-active text-dark" style="width: 10%">注文日</td>
            <td class="table-active text-dark" style="width: 40%">配達住所</td>
            <td class="table-active text-dark" style="width: 20%">注文内容</td>
            <td class="table-active text-dark" style="width: 10%">支払金額</td>
            <td class="table-active text-dark" style="width: 10%">ステータス</td>
            <td class="table-active text-dark" style="width: 10%">注文詳細</td>
          </tr>
            <% @orders.each do |order| %>
              <tr>
                <td class="align-middle"><%= order.created_at.strftime('%Y/%-m/%-d') %></td>
                <td>〒<%= order.post_code %></br>
                  <%= order.address %></br>
                  <%= order.name %></td>
                <td class="align-middle">
                  <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %></br>
                  <% end %>
                </td>
                <td class="align-middle"><%= order.billing_amount.to_s(:delimited) %>円</td>
                <td class="align-middle">
                  <% if order.status == "受注確認中" %>
                    <p style="color: #dc3545;"><%= order.status %></p>
                  <% elsif order.status == "入金確認" %>
                    <p style="color: #fd7e14;"><%= order.status %></p>
                  <% elsif order.status == "製作中" %>
                    <p style="color: #ffc107;"><%= order.status %></p>
                  <% elsif order.status == "発送済み" %>
                    <p style="color: #28a745;"><%= order.status %></p>
                  <% end %>
                </td>
                <td class="align-middle"><%= link_to "詳細", order_path(order.id), class: 'border-primary rounded-primary btn text-primary' %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
      <% else %>
        <h4 class="my-5 mx-auto text-center">注文履歴はありません。</h4>
      <% end %>
    </div>
  </div>
</div>
<%= render 'public/repairs/index', repairs: @repairs %>