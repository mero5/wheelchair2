<div class='container border rounded' style="background-color: #FFFFFF;">
  <div class='row'>
    <div class='mt-5 col-8 mx-auto'>
      <h2 class="text-center bg-light"><strong>オーダーメイド見積依頼</strong></h2>
    </div>
  </div>
  <div class='row mt-3'>
    <div class="col-12 mx-auto">
      <%= render 'layouts/errors', obj: @made_to_order %>
      <%= form_with model: @made_to_order, url: made_to_orders_confirm_path do |f| %>

      <table class="table table-borderless">
        <tbody>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>フレームの種類</strong></td>
            <td class="text-danger" style="width: 13%;">
              <div>
                必須
              </div>
              <div class="mt-4">
                必須
              </div>
            </td>
            <td>
              <div>
                <span class="mr-5">
                  <%= f.radio_button :flame, :固定, checked: "checked" %>
                  <%= f.label :flame, "固定" %>
                </span>
                  <%= f.radio_button :flame, :折りたたみ %>
                  <%= f.label :flame, "折りたたみ" %>
              </div>
              <div class="d-flex justify-content mt-3">
                <span class="mr-5">
                  <%= f.radio_button :flame2_option, 0, checked: "checked" %>
                  <%= f.label :flame2, "普通型" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :flame2_option, 1 %>
                  <%= f.label :flame2, "リクライニング" %>
                </span>
                <span class="d-flex justify-content">
                  <%= f.radio_button :flame2_option, 2 %>
                  <%= f.label :flame2, "その他", class: "mr-3" %>
                  <%= f.text_field :flame2, class: "form-control" %>
                </span>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>型式</strong></td>
            <td class="text-danger" style="width: 13%;">必須</td>
            <td>
              <div>
                <span class="mr-5">
                  <%= f.radio_button :wheelchair_type, :自走式, checked: "checked" %>
                  <%= f.label :wheelchair_type, "自走式" %>
                </span>
                  <%= f.radio_button :wheelchair_type, :介助式 %>
                  <%= f.label :wheelchair_type, "介助式" %>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>車体</strong></td>
            <td class="text-danger" style="width: 13%;">必須</td>
            <td>
              <div>
                <span class="mr-5">
                  <%= f.radio_button :material, :アルミ, checked: "checked" %>
                  <%= f.label :material, "アルミ" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :material, :鉄 %>
                  <%= f.label :material, "鉄" %>
                </span>
                  <%= f.radio_button :material, :ステンレス %>
                  <%= f.label :material, "ステンレス" %>
              </div>
            </td>
          </tr>
          <tr class="">
            <td class="align-middle" style="width: 17%;"><strong>フレーム色</strong></td>
            <td class="text-danger" style="width: 13%;">必須</td>
            <td>
              <div class="d-flex justify-content">
                <%= f.label :flame_color, "アルマイト：" %>
                <%= f.collection_select(Color, @colors, :id, :name, {}, { class: "custom-select col-5" }) %>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td style="width: 17%;"><strong>サイドガード色</strong></td>
            <td class="text-danger" style="width: 13%;">必須</td>
            <td>
              <div class="d-flex justify-content">
                <%= f.label :side_color, "アルマイト：" %>
                <%= f.collection_select(:color_id, @colors, :id, :name, {}, { class: "custom-select col-5" }) %>
              </div>
              <div class="d-flex justify-content mt-3">
                <% @colors.each do |color| %>
                  <span class=" mx-2 mt-2">
                    <div><%= image_tag color.image, size: '60x40', style: "background-size: cover; background-position: center;" %></div>
                    <div><%= color.name %></div>
                  </span>
                <% end %>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>シート色</strong></td>
            <td class="align-middle text-danger" style="width: 13%;">必須</td>
            <td>
              <div class="d-flex justify-content">
                <%= f.label :seat_color, "座シート：" %>
                <%= f.collection_select(:cloth_id, @cloths, :id, :name, {}, { class: "custom-select col-5" }) do %>
                  <%= image_tag cloth.image, size: '100x80', style: "background-size: cover; background-position: center;" %>
                <% end %>
              </div>
              <div class="mt-3 d-flex justify-content">
                  <%= f.label :back_color, "背シート：" %>
                  <%= f.collection_select(:cloth_id, @cloths, :id, :name, {}, { class: "custom-select col-5" }) %>
              </div>
              <div class="d-flex justify-content mt-3">
                <% @cloths.each do |cloth| %>
                  <span class="mx-2 mt-2">
                    <div><%= image_tag cloth.image, size: '60x40', style: "background-size: cover; background-position: center;" %></div>
                    <div><%= cloth.name %></div>
                  </span>
                <% end %>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>ブレーキ</strong></td>
            <td class="text-danger" style="width: 13%;">必須</td>
            <td>
              <div>
                <span class="mr-5">
                  <%= f.radio_button :break, :PP, checked: "checked" %>
                  <%= f.label :break, "PP" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :break, :PPN %>
                  <%= f.label :break, "PPN" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :break, :PPS %>
                  <%= f.label :break, "PPS" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :break, :鉄 %>
                  <%= f.label :break, "鉄" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :break, :鉄 %>
                  <%= f.label :break, "鉄" %>
                </span>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>介護ブレーキ</strong></td>
            <td class="text-danger" style="width: 13%;">必須</td>
            <td>
              <div>
                <span class="mr-5">
                  <%= f.radio_button :nursing_break, :無し, checked: "checked" %>
                  <%= f.label :nursing_break, "無し" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :nursing_break, :アルミ %>
                  <%= f.label :nursing_break, "アルミ" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :nursing_break, :鉄 %>
                  <%= f.label :nursing_break, "鉄" %>
                </span>
                  <%= f.radio_button :nursing_break, :ステンレス %>
                  <%= f.label :nursing_break, "ステンレス" %>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>転倒防止装置</strong></td>
            <td class="align-middle" style="width: 13%;">任意</td>
            <td>
              <div>
                <span class="mr-5">
                  <%= f.radio_button :turnover, :ゴム %>
                  <%= f.label :turnover, "ゴム" %>
                </span>
                <span class="mr-5">
                  <%= f.radio_button :turnover, :コロ %>
                  <%= f.label :turnover, "コロ" %>
                </span>
                  <%= f.radio_button :turnover, :キャスター %>
                  <%= f.label :turnover, "キャスター" %>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>オプション</strong></td>
            <td class="align-middle" style="width: 13%;">任意</td>
            <td>
              <div>
                杖入れ：
                <span class="mx-3">
                  <%= f.radio_button :cane, :大 %>
                  <%= f.label :cane, "大" %>
                </span>
                <span class="mr-3">
                  <%= f.radio_button :cane, :中 %>
                  <%= f.label :cane, "中" %>
                </span>
                  <%= f.radio_button :cane, :小 %>
                  <%= f.label :cane, "小" %>
                </span>
                <span class="mx-5">/</span>
                <span class="mr-3">
                  <%= f.radio_button :cane2, :左 %>
                  <%= f.label :cane2, "左" %>
                </span>
                <span class="mr-3">
                  <%= f.radio_button :cane2, :右 %>
                  <%= f.label :cane2, "右" %>
                </span>
                  <%= f.radio_button :cane2, :両方 %>
                  <%= f.label :cane2, "両方" %>
              </div>
              <div class="mt-3">
                クッション：
                <span class="mx-3">
                  <%= f.radio_button :cushion, :ホロクッション %>
                  <%= f.label :cushion, "ホロクッション" %>
                </span>
                <span class="mr-3">
                  <%= f.radio_button :cushion, :クッション２ %>
                  <%= f.label :cushion, "クッション２" %>
                </span>
                  <%= f.radio_button :cushion, :クッション３ %>
                  <%= f.label :cushion, "クッション３" %>
              </div>
              <div class="mt-3">
                テーブル：
                <span class="mx-3">
                  <%= f.radio_button :table, :上下式 %>
                  <%= f.label :table, "上下式" %>
                </span>
                <span class="mr-3">
                  <%= f.radio_button :table, :前後式 %>
                  <%= f.label :table, "前後式" %>
                </span>
                  <%= f.radio_button :table, :マジック式 %>
                  <%= f.label :table, "マジック式" %>
              </div>
            </td>
          </tr>
          <tr class="border-bottom">
            <td class="align-middle" style="width: 17%;"><strong>その他要望</strong></td>
            <td class="align-middle" style="width: 13%;">任意</td>
            <td>
              <div>
                <%= f.text_area :others, class: "form-control mb-2", size: "20x6" %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="mb-5 col-12 text-center">
      <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>