<div class='container border rounded' style="background-color: #FFFFFF;">
  <div class='row'>
    <div class='col-8 mt-5 mx-auto'>
      <h2 class="text-center bg-light"><strong>オーダーメイド注文内容確認</strong></h2>
    </div>
  </div>
  <div class='row mt-4'>
    <div class="col-8 mx-auto">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active text-dark" style="width: 30%">ご用件について</td>
            <td style="width: 70%"><%= @contact.subject %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">お名前</td>
            <td><%= @contact.name %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">電話番号</td>
            <td><%= @contact.phone_number %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">メールアドレス</td>
            <td><%= @contact.email %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">連絡方法</td>
            <td><%= @contact.status %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">お問い合わせ内容</td>
            <td><%= @contact.message %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class='row mt-3 mb-5'>
    <div class="col-10 text-center ">
      <div class="btn-group">
      <%= form_with model: @contact, url: back_path do |f| %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :status %>
        <%= f.hidden_field :message %>
        <%= f.submit '入力画面に戻る', class: "btn btn-success text-center mr-5" %>
      <% end %>
      <%= form_with model: @contact do |f| %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :status %>
        <%= f.hidden_field :message %>
        <%= f.submit "見積依頼を", class: "btn btn-success text-center ml-5" %>
      <% end %>
      </div>
    </div>
  </div>
</div>