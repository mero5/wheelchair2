<div class='container'>
  <div class='row'>
    <div class='mt-3 col-4 mx-auto'>
      <h2 class="text-center h4 bg-light">修理依頼</h2>
    </div>
  </div>
  <div class='row mt-3'>
    <div class="col-8 mx-auto">
      <% if customer_signed_in? %>
        <%= form_with model: @repair, url: repairs_confirm_path do |f| %>
          <strong>修理品を選択</strong>
          <div class="form-group ml-3 mt-2">
            <%= f.radio_button :wheelchair_kinds_option, 0, checked: "checked" %>
            <%= f.label :categories, "車椅子の種類" %>
            <%= f.label :category_name, "カテゴリから選択" %>
            <%= f.collection_select(:categories, @categories, :id, :category_name, {}, { class: "custom-select ml-3" }) %>
          </div>
          <div class="form-group text-left ml-3">
            <%= f.radio_button :wheelchair_kinds_option, 1 %>
            <%= f.label :wheelchair_kinds, "その他" %>
            <div class="form-inline">
              <%= f.label :wheelchair_kinds, '修理品名' %>
              <%= f.text_field :wheelchair_kinds, class: "form-control mb-2 col-8" %>
            </div>
          </div>
          <strong>タイヤ</strong>
            <div class="form-group ml-3 mt-2">
              <%= f.radio_button :tire, :タイヤとチューブ交換 %>
              <%= f.label :tire, "タイヤとチューブ交換" %>
            </div>
            <div class="form-group ml-3 mt-2">
              <%= f.radio_button :tire, :タイヤのみ交換 %>
              <%= f.label :tire, "タイヤのみ交換" %>
            </div>
            <div class="form-group ml-3 mt-2">
              <%= f.radio_button :tire, :チューブのみ交換 %>
              <%= f.label :tire, "チューブのみ交換" %>
            </div>
            <strong>ブレーキ関係</strong>
            <div class="form-group ml-3 mt-2">
              <%= f.radio_button :break, :ブレーキの調整 %>
              <%= f.label :break, "ブレーキの調整" %>
            </div>
            <div class="form-group ml-3 mt-2">
              <%= f.radio_button :break, :ブレーキの交換 %>
              <%= f.label :break, "ブレーキの交換" %>
            </div>
          <strong>キャスター関係</strong>
            <div class="form-group ml-3 mt-2">
              <%= f.radio_button :caster, :キャスターの交換 %>
              <%= f.label :caster, "キャスターの交換" %>
            </div>
          <strong>修理場所</strong>
          <div>
            <div class="form-group ml-3 mt-2">
              <%= f.radio_button :address_option, 0, checked: "checked" %>
              <%= f.label :customer_id, "ご自身の住所" %>
              <div class="ml-4">
                <p><%= @customer.address %></p>
                <p><%= @customer.first_name %><%= @customer.last_name %></p>
              </div>
            </div>
            <div class="form-group ml-3 mt-2">
              <%= f.radio_button :address_option, 1 %>
              <%= f.label :deliveries, "登録済住所から選択" %>
              <%= f.collection_select(:customer_id, @deliveries, :id, :full_delivery, {}, { class: "custom-select ml-3" }) %>
            </div>
            <div class="form-group text-left ml-3">
              <%= f.radio_button :address_option, 2 %>
              <%= f.label :address, "新しいお届け先" %>
              <div class="form-inline">
                <%= f.label :delivery_name, '住所', class: "col-form-label w-25 d-inline-block ml-3" %>
                <%= f.text_field :delivery_address, class: "form-control mb-2 col-8" %>
              </div>
              <div class="form-inline">
                <%= f.label :delivery_name, '宛名', class: "col-form-label w-25 d-inline-block ml-3" %>
                <%= f.text_field :delivery_name, class: "form-control mb-2" %>
              </div>
            </div>
          </div>
          <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
        <% end %>
      <% else %>
        修理依頼する際はログインをしてください
      <% end %>
    </div>
  </div>
</div>