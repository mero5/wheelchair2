<div class="container">
  <div class="row mt-4">
    <div class="col-8 mx-auto">
      <h4 class="text-center bg-light">修理依頼履歴一覧</h4>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-12 mx-auto">
      <% if repairs.present? %>
      <table class="table">
        <thead>
          <tr>
            <th class="table-active text-dark" style="width: 10%">修理依頼日</th>
            <th class="table-active text-dark" style="width: 40%">修理場所の住所</th>
            <th class="table-active text-dark" style="width: 20%">修理内容</th>
            <th class="table-active text-dark" style="width: 20%">ステータス</th>
            <th class="table-active text-dark" style="width: 10%">詳細</th>
          </tr>
        </thead>
        <tbody>
          <% repairs.each do |repair| %>
            <tr class="align-middle">
              <td class="align-middle"><%= repair.created_at.strftime("%Y/%-m/%-d") %></td>
              <td class="align-middle">
                <%= repair.address %></br>
                <%= repair.name %>
              </td>
              <td class="align-middle">
                <%= repair.wheelchair_kinds %></br>
                <%= repair.tire %></br>
                <%= repair.break %></br>
                <%= repair.caster %>
              </td>
              <td class="align-middle">
                <% if repair.status == "修理依頼中" %>
                  <p style="color: #fd7e14;"><%= repair.status %></p>
                <% elsif repair.status == "スケジュール調整中" %>
                  <p style="color: #ffc107;"><%= repair.status %></p>
                <% elsif repair.status == "修理完了済み" %>
                  <p style="color: #28a745;"><%= repair.status %></p>
                <% end %>
              </td>
              <td class="align-middle"><%= link_to "詳細", repair_path(repair), class: 'border-primary rounded-primary btn text-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <h4 class="my-5 mx-auto text-center">修理依頼の履歴はありません。</h4>
      <% end %>
    </div>
  </div>
</div>